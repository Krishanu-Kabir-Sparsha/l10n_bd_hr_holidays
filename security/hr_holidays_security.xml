<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- ============================================ -->
        <!-- NEW SECURITY GROUPS FOR RECOMMENDATION & FORWARD -->
        <!-- ============================================ -->
        
        <!-- Leave Recommender Group -->
        <record id="group_hr_holidays_recommender" model="res.groups">
            <field name="name">Leaves:   Recommender</field>
            <field name="comment">Can recommend leave requests before they go for approval</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Leave Forwarder Group -->
        <record id="group_hr_holidays_forwarder" model="res.groups">
            <field name="name">Leaves:  Forwarder</field>
            <field name="comment">Can forward leave requests after recommendation</field>
            <field name="implied_ids" eval="[(4, ref('l10n_bd_hr_holidays.group_hr_holidays_recommender'))]"/>
        </record>
        
    </data>
</odoo>